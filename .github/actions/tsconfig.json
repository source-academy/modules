{
  "include": [
    "src/**/*.ts",
    "vitest.setup.ts"
  ],
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "ES2020"
    ],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2020",
    "verbatimModuleSyntax": true
  }
}
