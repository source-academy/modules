{
  "private": true,
  "name": "@sourceacademy/modules",
  "version": "1.0.0",
  "repository": "https://github.com/source-academy/modules.git",
  "license": "Apache-2.0",
  "type": "module",
  "scripts-info": {
    "build:docs": "Build all documentation for all bundles",
    "build:libs": "Build all module library code",
    "build:modules": "Build all bundles, tabs and documentation",
    "lint:all": "Lint all code in the repository",
    "lint:inspect": "Run the interactive ESLint config inspector",
    "prepare": "Enable git hooks",
    "serve": "Start the HTTP server to serve all files in `build/`, with the same directory structure",
    "template": "Interactively initialise a new bundle or tab from their templates",
    "test:all": "Run unit tests for the entire repository",
    "test:modules": "Run unit tests for tabs and bundles",
    "tsc:all": "Run the Typescript compiler for all code in the repository",
    "tsc:modules": "Run the Typescript compiler for bundle and tabs only"
  },
  "scripts": {
    "build:docs": "buildtools build docs",
    "build:libs": "yarn workspaces foreach -ptW --from \"./lib/*\" run build",
    "build:modules": "buildtools build all",
    "devserver": "devserver",
    "lint:all": "eslint src lib devserver",
    "lint:inspect": "yarn dlx eslint --inspect-config",
    "preinstall": "yarn build:libs",
    "prepare": "husky",
    "serve": "http-server --cors=* -c-1 -p 8022 ./build",
    "template": "buildtools template",
    "test:all": "buildtools test",
    "test:devserver": "vitest --project \"Dev Server\"",
    "test:libs": "yarn workspaces foreach -ptW --from \"./lib/*\" run test",
    "test:modules": "buildtools test src",
    "tsc:all": "yarn workspaces foreach -pt --all run tsc",
    "tsc:devserver": "tsc --project ./devserver/tsconfig.json",
    "tsc:modules": "yarn workspaces foreach -ptW --from \"./src/{bundles,tabs}/*\" run tsc"
  },
  "devDependencies": {
    "@sourceacademy/lint-plugin": "workspace:^",
    "@sourceacademy/modules-buildtools": "workspace:^",
    "@sourceacademy/modules-lib": "workspace:^",
    "@stylistic/eslint-plugin": "^4.4.1",
    "@types/node": "^22.15.30",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.1",
    "@vitest/coverage-v8": "^3.2.3",
    "@yarnpkg/types": "^4.0.1",
    "esbuild": "^0.25.5",
    "eslint": "^9.28.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-vitest": "^0.5.4",
    "http-server": "^0.13.0",
    "husky": "^9.0.11",
    "jsdom": "^26.1.0",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.33.1",
    "vitest": "^3.2.3",
    "yarnhook": "^0.6.0"
  },
  "dependencies": {
    "js-slang": "^1.0.81",
    "lodash": "^4.17.21",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "optionalDependencies": {
    "@sourceacademy/modules-devserver": "workspace:^"
  },
  "devEngines": {
    "packageManager": {
      "name": "yarn",
      "version": "4.8.1",
      "onFail": "warn"
    },
    "runtime": {
      "name": "node",
      "version": "^22.16.0",
      "onFail": "error"
    }
  },
  "packageManager": "yarn@4.8.1",
  "workspaces": [
    "./devserver",
    "./lib/*",
    "./src/bundles",
    "./src/tabs"
  ],
  "resolutions": {
    "js-slang": "portal:/Users/leeyi45/source/source_academy/js-slang"
  }
}
