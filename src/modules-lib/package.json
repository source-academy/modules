{
  "name": "@sourceacademy/modules-lib",
  "description": "Common library used by Source Acaddemy bundles and tabs",
  "private": true,
  "devDependencies": {
    "@types/react": "^18.3.2",
    "@types/react-dom": "^18.3.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.8.2"
  },
  "exports": {
    "./types": "./dist/types/index.js",
    "./tabs/*": "./dist/tabs/*.js",
    "./utilities": "./dist/utilities.js",
    "./utilities.js": "./dist/utilities.js",
    "./specialErrors": "./dist/specialErrors.js",
    "./specialErrors.js": "./dist/specialErrors.js",
    "./type_map": "./dist/type_map.js"
  },
  "dependencies": {
    "@blueprintjs/core": "^5.10.2",
    "@blueprintjs/icons": "^5.9.0",
    "js-slang": "^1.0.81",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "scripts": {
    "build": "tsc --project ./tsconfig.json"
  },
  "jest": {
    "displayName": "Modules Library",
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "preset": "ts-jest/presets/default-esm",
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.ts"
    ]
  }
}
